<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.m5.oximetergui" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.NewPatient"
            android:label="@string/title_activity_new_patient" >
        </activity>
        <activity
            android:name=".Activities.PatientList"
            android:label="@string/title_activity_patient_list" >
        </activity>
        <activity
            android:name=".Activities.PatientHistory"
            android:label="@string/title_activity_patient_history" >
        </activity>
        <activity
            android:name=".Activities.SQL_Sandbox"
            android:label="@string/title_activity_sql__sandbox" >
        </activity>
        <activity
            android:name=".Activities.PatientInfo"
            android:label="@string/title_activity_info"
            android:parentActivityName=".Activities.MainActivity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.m5.oximetergui.Activities.MainActivity.MainActivity" />
        </activity>
    </application>

</manifest>
